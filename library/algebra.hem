function SolutionLinearEquations(a,b) {
    row=rows(a);
    size=row;
    while ((row-=1)+1) {
        if (a(row,row)==0)
            return error();
        column=row+1;
        while(size>column) {
            b(row,0)-=a(row,column)*b(column,0);
            column-=1;
        }
        b(row,0)=b(row,0)/a(row,row);
    }
