include matrix.hem

function SolutionLinearEquations(matrix,vector) {
    matrix;
    vector;
    if (DeterminateOfMatrix(matrix)!=0)
        return ReverseMatrix(matrix)*vector;
    return error();
}

function SolutionOfPolynomial(fun,x0,epsilon=0.000001) {
    xOld=x0;
    xNew=xOld-fun(xOld)/DerivateInPoint(fun,xOld);
    while(abs(xOld-xNew)>epsilon) {
        xOld=xNew;
        xNew=xOld-fun(xOld)/DerivateInPoint(fun,xOld);
    }
    return xNew;
}

